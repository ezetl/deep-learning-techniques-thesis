net: "siamese_mnist.prototxt"
type: "SGD"

#test_state: { stage: 'test-on-train' }
#test_iter: 500
#test_interval: 1000

base_lr: 0.001
momentum: 0.9
weight_decay: 0.0005

# The learning rate policy
lr_policy: "step"
stepsize: 10000 
gamma: 0.5

# Display every 100 iterations
display: 100
max_iter: 40000

snapshot: 40000
snapshot_prefix: "/home/ezetl/tesis/experiments/mnist/snapshots/snapshot_mnist_egomotion_lr0.001"


# solver mode: CPU or GPU
solver_mode: GPU
